// Import all partials
@require './_*.styl'

.container
  width 90%
  max-width 600px
  margin 0 auto
form
  font-size .75em
  input[type="text"]
    height 40px
    line-height 40px
    border 2px solid #555
    padding 0 10px
  button
    font-size 14px
    height 40px
    font-weight bold
    text-transform uppercase
    background #555
    border none
    color #fff
    padding 0 10px
header.top
  text-align center
  h1
    font-size 14.4rem
    line-height 0.7 // this font has a wacky baseline
    display flex
    justify-content: center;
  h3
    margin 0
    font-size 2rem
    color orange
    position relative
    display inline-block
    span
      background white
      position relative
      z-index 2
      padding-left 1rem
      padding-right 1rem
    &:before, &:after
      display block
      z-index 1
      background black
      position absolute
      width 130%
      height 1px
      content ''
      top 5px
      margin-left -15%
    &:after
      top auto
      bottom 7px

.playlist-title
  width 100%
  appearance none
  text-align center
  font-size 3rem
  background transparent
  border none
  margin 1.5rem auto 2rem
  outline none

.tracklist
  padding 30px
  background #eee
  .track
    background #fff
    border 1px solid #dfdfdf
    padding 10px 15px 15px
    position relative
    &.highlighted
      border: 1px solid #1ed760
    &:after
      content ""
      position absolute
      width 100%
      height 100%
      top 0
      left 0
    h3
      font-size 1em
      margin-bottom .15em
    h4
      font-size .65em
      font-weight bold
      text-transform uppercase
      margin-bottom 0
    &:hover
      .remove-track
        display block
    .remove-track
      display none
      position absolute
      right 15px
      top 50%
      transform translateY(-50%)
      padding 15px
      cursor pointer
      z-index 10
      &:before
        content ""
        display block
        width 15px
        height 2px
        position absolute
        top 50%
        right 50%
        transform translateX(50%) rotate(45deg)
        background black
      &:after
        content ""
        display block
        width 15px
        height 2px
        position absolute
        top 50%
        right 50%
        transform translateX(50%) rotate(-45deg)
        background black
.addTrackForm
  input[type="text"]
    width 50%
    &:first-child
      border-right none
  button
    width 100%
  .search-results
    background #707070
    color #fff
    position relative
    margin-top -56px
    ul
      list-style none
      padding 0
      li
        padding 5px 10px
        cursor pointer
        &:hover
          background #2b2b2b
  .spotify-btn
    background #1ed760

.addPlaylistForm
  display flex
  input[type="text"]
    width calc(100% - 200px)
  .button
    width 100%
    max-width 200px
